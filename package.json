{
  "name": "lovetofly-portal",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "dev": "NODE_OPTIONS=--max-old-space-size=4096 next dev",
    "dev:debug": "NODE_OPTIONS=--max-old-space-size=8192 next dev",
    "build": "NODE_OPTIONS=--max-old-space-size=4096 next build",
    "start": "next start",
    "lint": "eslint",
    "test": "NODE_OPTIONS=--max-old-space-size=2048 jest",
    "test:watch": "NODE_OPTIONS=--max-old-space-size=2048 jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest src/__tests__/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "migrate": "node-pg-migrate -m src/migrations",
    "migrate:up": "node-pg-migrate up -m src/migrations",
    "migrate:down": "node-pg-migrate down -m src/migrations",
    "migrate:create": "node-pg-migrate create -m src/migrations",
    "seed:dev": "psql postgresql://edsonassumpcao@localhost:5432/lovetofly-portal -f scripts/seeds/000_run_all.sql",
    "seed:users": "psql postgresql://edsonassumpcao@localhost:5432/lovetofly-portal -f scripts/seeds/001_seed_users.sql",
    "seed:profiles": "psql postgresql://edsonassumpcao@localhost:5432/lovetofly-portal -f scripts/seeds/002_seed_career_profiles.sql",
    "seed:companies": "psql postgresql://edsonassumpcao@localhost:5432/lovetofly-portal -f scripts/seeds/003_seed_companies.sql",
    "seed:jobs": "psql postgresql://edsonassumpcao@localhost:5432/lovetofly-portal -f scripts/seeds/004_seed_jobs.sql",
    "seed:hangars": "psql postgresql://edsonassumpcao@localhost:5432/lovetofly-portal -f scripts/seeds/006_seed_hangar_listings.sql",
    "seed:images": "node scripts/seeds/generate-images.js"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.33.0",
    "@stripe/react-stripe-js": "^5.4.1",
    "@stripe/stripe-js": "^8.6.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.1",
    "@vercel/blob": "^0.23.4",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cookie": "^1.1.1",
    "framer-motion": "^12.23.26",
    "jsonwebtoken": "^9.0.3",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.16.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "resend": "^6.6.0",
    "stripe": "^20.1.0",
    "styled-jsx": "^5.1.7",
    "swr": "^2.3.8",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "10.4.16",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "postcss": "8.4.31",
    "postcss-js": "^5.0.3",
    "postcss-nested": "^7.0.2",
    "supertest": "^7.1.4",
    "tailwindcss": "3.4.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5",
    "util-deprecate": "^1.0.2"
  }
}
