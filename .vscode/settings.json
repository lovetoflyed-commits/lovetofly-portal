{
    "chat.mcp.assisted.nuget.enabled": true,
    "chat.mcp.discovery.enabled": {
        "claude-desktop": true,
        "windsurf": true,
        "cursor-global": true,
        "cursor-workspace": true
    },
    "markdown.validate.enabled": false,
    "markdown.validate.fileLinks.enabled": "ignore",
    "markdown.validate.fragmentLinks.enabled": "ignore",
    "markdown.validate.referenceLinks.enabled": "ignore",
    
    "// MEMORY OPTIMIZATION": "=== Prevent JS heap out of memory ===",
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.formatOnSave": false
    },
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "typescript.tsserver.maxTsServerMemory": 2048,
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "typescript.check.tscVersion": false,
    
    "// FILE WATCHING": "=== Reduce file watcher overhead ===",
    "files.watcherExclude": {
        "**/node_modules": true,
        "**/.next": true,
        "**/dist": true,
        "**/build": true,
        "**/coverage": true,
        "**/playwright-report": true,
        "**/.git": true,
        "**/.*": true
    },
    "files.exclude": {
        "**/.next": true,
        "**/node_modules": true,
        "**/coverage": true,
        "**/dist": true
    },
    "files.associations": {
        "**/*.sql": "postgresql"
    },
    "[sql]": {
        "editor.defaultFormatter": null
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/.next": true,
        "**/dist": true,
        "**/build": true,
        "**/coverage": true
    },
    
    "// EDITOR PERFORMANCE": "=== Reduce editor overhead ===",
    "editor.codeActionsOnSave": {},
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.defaultFormatter": null,
    
    "// EXTENSION SETTINGS": "=== Optimize extension behavior ===",
    "eslint.run": "onSave",
    "eslint.format.enable": false,
    "[json]": {
        "editor.formatOnSave": false
    },
    "[jsonc]": {
        "editor.formatOnSave": false
    },
    "tailwindCSS.experimental.classRegex": [
        ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
    ],
    "extensions.recommendations": [],
    "mssql.linting": false,
    "mssql.linters": [],
    "[sql]": {
        "editor.defaultFormatter": null,
        "editor.formatOnSave": false
    },
    
    "// MISC": "=== Other optimizations ===",
    "telemetry.telemetryLevel": "off",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": true
    },
    "python.analysis.typeCheckingMode": "basic",
    "vscode-edge-devtools.browserFlavor": "Default",
    "files.autoSave": "off",
    "workbench.browser.openLocalhostLinks": true,
    "workbench.commandPalette.experimental.suggestCommands": true,
    "workbench.commandPalette.preserveInput": true,
    "workbench.commandPalette.showAskInChat": false,
    "chat.tools.terminal.autoApprove": {
        "lsof": true
    },
    "terminal.integrated.accessibleViewFocusOnCommandExecution": true,
    "terminal.sourceControlRepositoriesKind": "both"
}